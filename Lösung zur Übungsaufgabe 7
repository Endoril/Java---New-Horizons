class For_7 {
	public static void main(String[] args) {
		System.out.println();
		for (int i=1; i<=9; i=i+1) {               
			for (int j=1; j<=(9-i); j=j+1)  //Schleife für Leerzeichen
				System.out.print(" ");
			for (int j=1; j<=i;     j=j+1)  //Schleife für Ziffern
				System.out.print(i);
			System.out.println();
		}
		System.out.println(); 
	}
}
